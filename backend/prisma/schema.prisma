// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        BigInt   @id @default(autoincrement())
  username  String   @unique @db.VarChar(50)
  password  String   @db.VarChar(255)
  email     String   @unique @db.VarChar(100)
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  
  images    Image[]

  @@map("t_user")
}

model Image {
  id               BigInt    @id @default(autoincrement())
  userId           BigInt    @map("user_id")
  originalFilename String    @map("original_filename") @db.VarChar(255)
  storedPath       String    @map("stored_path") @db.VarChar(500)
  thumbnailPath    String    @map("thumbnail_path") @db.VarChar(500)
  fileSize         BigInt?   @map("file_size")
  resolution       String?   @db.VarChar(50)
  shootingTime     DateTime? @map("shooting_time")
  location         String?   @db.VarChar(255)
  deviceInfo       String?   @map("device_info") @db.VarChar(255)
  createdAt        DateTime  @default(now()) @map("created_at")
  
  user             User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  imageTags        ImageTagRelation[]

  @@map("t_image")
}

model Tag {
  id        BigInt   @id @default(autoincrement())
  name      String   @unique @db.VarChar(50)
  type      Int      @default(1) @db.TinyInt // 1:用户自定义, 2:EXIF, 3:AI
  createdAt DateTime @default(now()) @map("created_at")
  
  imageTags ImageTagRelation[]

  @@map("t_tag")
}

model ImageTagRelation {
  id      BigInt @id @default(autoincrement())
  imageId BigInt @map("image_id")
  tagId   BigInt @map("tag_id")
  
  image   Image  @relation(fields: [imageId], references: [id], onDelete: Cascade)
  tag     Tag    @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@unique([imageId, tagId])
  @@map("t_image_tag_relation")
}

